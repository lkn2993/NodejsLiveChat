extends layout

block content
    div.navbar.navbar-fixed-top
        div.navbar-inner
            div.container-fluid
                ul#global-nav.nav.pull-left
                    a(href='#').brand Home Page
                ul.nav.pull-left
                    button.btn.btn-info(href="#joinModal" role="button" data-toggle="modal") Join
                ul.nav.pull-left
                    button.btn.btn-info(href="#postModal" role="button" data-toggle="modal") Add
                ul.nav.pull-left
                    button.btn.btn-info(onclick="window.location.href='/panel'") Settings 
                button#btn-logout.btn.btn-primary(onclick="window.location.href='/logout'")
                    i.icon-lock.icon-white
                    | Sign Out
    div.row(style="margin:10px;")
        div.column.col-md-10
            ul.pages
                li(class="chat page")
                    div.chatArea
                        ul.messages
                    input.inputMessage(placeholder="Type here...")
    div#postModal.modal-alert.modal.hide.fade
        div.modal-header
            button.close(data-dismiss='modal') x
            h3
        div.modal-body
            form.form.center-block
                div.form-group
                    textarea#friend-str.form-control.input-lg(autofocus="" placeholder="Enter your friend's name")
        div.modal-footer
            button#add-friend(data-dismiss="modal").btn.btn-warning OK
    div#joinModal.modal-alert.modal.hide.fade
        div.modal-header
            button.close(data-dismiss='modal') x
            h3
        div.modal-body
            form.form.center-block
                div.form-group
                    textarea#join-str.form-control.input-lg(autofocus="" placeholder="Enter chatroom name")
        div.modal-footer
            button#join-room(data-dismiss="modal").btn.btn-warning OK
block scripts
    script(src='/vendor/jquery.min.js')
    script(src='/vendor/socket.io.js')
    script(src='/vendor/bootstrap-modal.js')
    script(src='/vendor/bootstrap-transition.js')
    script(src='/js/views/home.js')